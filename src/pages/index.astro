---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Certificate from "../components/Certificate.astro";
import Work from "../components/Work.astro";
import certificates from "../content/certificates.json";
import ArticleIcon from "../assets/images/svg/article-icon.svg";
// import MentorIcon from "../assets/images/svg/mentor-icon.svg";
import ProcessIcon from "../assets/images/svg/process-icon.svg";
import Portrait from "../assets/images/svg/portrait.svg";
import Blob from "../assets/images/svg/blob.svg";
import Crown from "../assets/images/svg/crown.svg";
import Rhomb from "../assets/images/svg/rhomb.svg";
import About from "../assets/images/svg/about.svg";

import { YouTube } from "@astro-community/astro-embed-youtube";
import TestimonialsList from "../components/TestimonialsList.astro";

const works = await getCollection("works");
---

<Layout
  title="Product designer for Fintech tools"
  description="Fintech-focused interface designer with 4 years of experience in accessible web and mobile design."
>
  <section id="hero" class="relative">
    <h1
      class="flex flex-wrap gap-x-[.4em] mb-[.42lh] text-[9svw] font-bold md:text-[6svw] md:justify-end 2xl:text-8xl/snug lg:pb-"
      style="view-transition-name: hero-title;"
    >
      <span
        data-fade-animation
        class="w-full ms-auto relative"
        style="--fade-index: 1"
      >
        <span class="relative md:relative"
          >Product
          <Crown
            data-svg-path-animation
            style="--svg-path-index: 3"
            aria-hidden="true"
            stroke="currentColor"
            class="w-[1em] aspect-square absolute top-0 -translate-y-full md:hidden"
          />
          <Rhomb
            data-svg-path-animation
            style="--svg-path-index: 2"
            aria-hidden="true"
            stroke="currentColor"
            class="hidden md:w-[.66em] md:aspect-[7/8] md:absolute md:block"
          />
        </span>
        <span class="ms-auto md:ms-0 md:me-auto">designer </span>
      </span>
      <span class="relative" data-fade-animation style="--fade-index: 2"
        >for
        <Rhomb
          data-svg-path-animation
          style="--svg-path-index: 3"
          aria-hidden="true"
          stroke="currentColor"
          class="md:hidden w-[.84em] aspect-[7/8] absolute top-2 right-0 translate-x-4/3"
        />
      </span>
      <span class="relative" data-fade-animation style="--fade-index: 3"
        >fintech tools
      </span>

      <Portrait
        data-svg-path-animation
        style="--svg-path-index: 1"
        aria-hidden="true"
        class="absolute w-[36svw] aspect-[7/8] stroke-current max-md:right-0 md:left-0 md:top-[1.5lh] md:w-[27%] md:max-h-[calc(100%-1.2lh)]"
      />
      <Blob
        aria-hidden="true"
        class="blob absolute -top-8 -right-svw w-[72svw] max-h-[78svw] aspect-[7/8] fill-accent -z-2 md:w-[42%] md:-left-10 md:top-0 md:max-h-[111%]"
      />
    </h1>

    <p
      class="mb-4 text-light z-1 relative md:w-[min(33em,_72%)] md:ms-auto"
      data-fade-animation
      style="--fade-index: 6"
    >
      I design trading platforms and financial software&nbsp;&mdash; products
      where every interaction matters. Over 5&nbsp;years in fintech, I've
      focused on making complex workflows more intuitive, ensuring designs meet
      compliance requirements.
      <Crown
        data-svg-path-animation
        style="--svg-path-index: 3"
        aria-hidden="true"
        width="42px"
        stroke="currentColor"
        class="hidden md:block md:absolute md:top-0 md:left-0 md:aspect-square md:-translate-x-3/4 md:-translate-y-full"
      />
    </p>
    <p
      class="text-light z-1 relative md:w-[min(33em,_72%)] md:ms-auto"
      data-fade-animation
      style="--fade-index: 5"
    >
      I lead design initiatives end-to-end&nbsp;&mdash; from discovery and user
      research to high-fidelity prototypes and handoff.
    </p>
  </section>

  <section id="work">
    <h2 class="heading-m">Work</h2>
    <ul class="flex flex-col gap-y-section-sm">
      {works.map((work) => <Work data={work.data} id={work.id} />)}
    </ul>
  </section>

  <section id="about" class="relative">
    <h2 class="heading-m">About</h2>
    <div class="grid gap-7.5 sm:grid-cols-2 md:gap-10">
      <div class="col-span-full [&>p]:w-[min(30em,_100%)] text-pretty relative">
        <p class="mb-4">
          I am a designer who puts <span
            data-umami-event="click-people-first"
            id="text-underline"
            class="relative inline-block"
          >
            people&nbsp;first&nbsp;</span
          >&mdash; whether they are end-users or team members. My&nbsp;approach
          combines empathy with an iterative design process to create thoughtful
          and enjoyable user experiences.
        </p>
        <p>
          I work with business analysts to understand requirements, engineers to
          ensure feasibility, and QA&nbsp;teams to catch edge cases early. This
          teamwork results in innovative solutions that align with both user
          needs and business objectives.
        </p>
        <About
          aria-hidden="true"
          stroke="currentColor"
          class="hidden md:h-[132%] md:absolute md:block end-0 bottom-0"
        />
      </div>
      <article class="relative bg-accent card rounded-xl">
        <h3 class="heading-s mb-10">Design process</h3>
        <p>
          I begin with research&nbsp;&mdash; user and stakeholder interviews,
          competitive analysis. I&nbsp;move through iterative prototyping and
          testing, from low-fidelity sketches to interactive prototypes, using
          AI to speed up ideation and analysis.
        </p>

        <ProcessIcon
          aria-hidden="true"
          width="20%"
          stroke="currentColor"
          class="aspect-video absolute top-8 right-13"
        />
      </article>

      <article class="relative bg-accent card rounded-xl">
        <h3 class="heading-s mb-10">How I mentor</h3>
        <p>
          I focus on giving clear, practical advice to help my mentees succeed.
          I believe kindness is key to building trust and strong relationships.
          My goal is to support and empower my mentees, always putting their
          growth and well-being first.
        </p>
        <!-- <MentorIcon
          aria-hidden="true"
          width="10%"
          stroke="currentColor"
          class="aspect-square absolute bottom-4 right-4"
        /> -->
      </article>

      <section class="col-span-full mt-7.5 md:mt-10">
        <h3 class="heading-s mb-5">Education</h3>
        <ul
          class="text-balance leading-5 grid gap-5 md:grid-cols-2 md:gap-x-10 md:gap-y-7.5"
        >
          <li class="grid grid-cols-1" data-umami-event="click-education">
            <h4 class="heading-s self-end">
              LABASAD Barcelona School of Arts & Design 2025-2026
            </h4>
            <span>Master's Degree in Principles of Graphic Design</span>
          </li>
        </ul>
      </section>

      <section class="col-span-full mt-7.5 md:mt-10">
        <h3 class="heading-s mb-5">Certifications</h3>

        <ul
          class="text-balance leading-5 grid gap-5 md:grid-cols-2 md:gap-x-10 md:gap-y-7.5"
        >
          {
            certificates.map((certificate) => (
              <Certificate data={certificate} />
            ))
          }
        </ul>
      </section>
    </div>
  </section>

  <section id="articles">
    <h2 class="heading-m">Talks&Articles</h2>
    <ul class="grid gap-7.5 md:grid-cols-2">
      <li
        class="flex items-end aspect-video relative bg-grey rounded-xl card has-hover:bg-indigo-300 transition"
      >
        <a
          data-umami-event="click-external article"
          href="https://www.linkedin.com/pulse/future-accessibility-devexperts-anastasiya-pavlyk-dx1zf/"
          target="_blank"
          class="text-[clamp(1.125rem,calc(0.8rem+1.6svw),2.5rem)] mb-0 after:absolute after:inset-0 hover:underline"
          >The Future of Accessibility at&nbsp;Devexperts
        </a>
        <ArticleIcon
          aria-hidden="true"
          width="10%"
          stroke="currentColor"
          stroke-width="2"
          class="aspect-square absolute top-6 right-10"
        />
      </li>
      <li class="aspect-video overflow-hidden rounded-xl w-full">
        <YouTube
          id="uyA54-uiUHc"
          title="Design for Accessibility. YouTube video player"
        />
      </li>
    </ul>
  </section>

  <section id="testimonials">
    <h2 class="heading-m">Testimonials</h2>
    <!-- <ul class="grid gap-7.5 md:grid-cols-2"></ul> -->
    <TestimonialsList />
  </section>

  <script>
    import { destroyScrollMenu, initScrollMenu } from "../scripts/scroll-menu";
    import { initTestimonial } from "../scripts/full-testimonial";

    document.addEventListener("astro:page-load", () => {
      initScrollMenu();
      initTestimonial();
    });

    document.addEventListener("astro:before-swap", destroyScrollMenu);
  </script>
</Layout>
